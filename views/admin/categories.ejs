<%- include ("../layouts/adminheader"); -%>
  <h2 class="page-title">Categories</h2>
  <a href="/admin/categories/add-category" class="btn btn-primary">Add a new category</a>
  <br><br>

  <table class="table table-striped sorting">
     <thead>
       <tr>
         <th>Category</th>
         <th>Edit</th>
         <th>Delete</th>
       </tr>
     </thead>
     <tbody>
       <% categories.forEach(function(cat) { %>
        <tr>
          <td><%= cat.title %></td>
          <td><a href="/admin/categories/edit-category/<%= cat._id %>">Edit Here</a></td>
         
          <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cat._id %>">Delete Here</a></td>
        
        </tr>

      <% }); %>
     </tbody>
  </table>

<%- include ("../layouts/adminfooter"); -%>